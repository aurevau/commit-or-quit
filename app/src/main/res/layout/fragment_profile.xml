<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProfileFragment">

    <FrameLayout
        android:layout_margin="30dp"
        android:id="@+id/profile_container"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/aurelie"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:clickable="true"
            android:focusable="true"/>


    </FrameLayout>

    <TextView
        android:layout_margin="16dp"
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/profile_container"
        app:layout_constraintStart_toStartOf="@id/profile_container"
        app:layout_constraintEnd_toEndOf="@id/profile_container"/>


        <TextView
            android:layout_margin="16dp"
            android:id="@+id/tv_goal_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            app:layout_constraintEnd_toStartOf="@id/profile_container"
            app:layout_constraintEnd_toEndOf="@id/tv_goals"/>

        <TextView
            android:id="@+id/tv_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:textSize="10sp"
            android:text="goals"
            app:layout_constraintEnd_toEndOf="@id/tv_goal_number"
            app:layout_constraintStart_toStartOf="@id/tv_goal_number"
            app:layout_constraintTop_toBottomOf="@id/tv_username"/>

        <TextView
            android:layout_margin="16dp"
            android:id="@+id/tv_friends_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            app:layout_constraintStart_toEndOf="@id/profile_container"
            />

        <TextView
            android:id="@+id/tv_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:textSize="10sp"
            android:text="friends"
            app:layout_constraintEnd_toEndOf="@id/tv_friends_number"
            app:layout_constraintStart_toStartOf="@id/tv_friends_number"
            app:layout_constraintTop_toBottomOf="@id/tv_username" />


    
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_friends"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>