<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SelectUsersFragment">

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_search_user"
        app:startIconDrawable="@drawable/search_icon"
        app:boxBackgroundColor="@color/cq_gray"
        android:hint="Add or search for friends"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_search_user"
            android:paddingStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.chip.ChipGroup
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="6dp"
        android:id="@+id/chipGroupMembers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:singleLine="false"
        app:chipSpacing="4dp"
        app:singleSelection="false"
        app:layout_constraintBottom_toTopOf="@id/rvUsers"
        app:layout_constraintTop_toBottomOf="@id/til_search_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/confirm_btn"/>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cq_secondary"
        android:text="Confirm"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/til_search_user"
        app:layout_constraintTop_toBottomOf="@id/til_search_user" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroupMembers"
        app:layout_constraintBottom_toBottomOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>