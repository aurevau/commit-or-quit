<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OnboardingActivity">

    <FrameLayout
        android:layout_marginTop="110dp"
        android:id="@+id/profile_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/til_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/aurelie"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:clickable="true"
            android:focusable="true"/>

        <ImageButton
            android:id="@+id/btn_add_profile_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/circle_white_background"
            android:src="@drawable/add_icon"
            android:scaleType="center"
            android:contentDescription="add profile picture"
            android:clickable="true"
            android:focusable="true"/>
    </FrameLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/profile_container"
        app:startIconTint="@color/cq_on_primary"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_username"
        app:boxBackgroundColor="@color/cq_background"
        android:hint="Enter a fun username that you like"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            android:inputType="text"
            android:paddingStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/til_username"
        app:startIconTint="@color/cq_on_primary"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_fullName"
        app:boxBackgroundColor="@color/cq_background"
        android:hint="Enter your first and last name"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_fullName"
            android:inputType="text"
            android:paddingStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/til_fullName"
        app:startIconTint="@color/cq_on_primary"
        android:layout_marginHorizontal="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/til_bio"
        android:minLines="4"
        android:textAlignment="textStart"
        app:boxBackgroundColor="@color/cq_background"
        android:hint="Let us know more about you.."
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_save"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_bio"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:paddingStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingHorizontal="-6dp"
        android:text="Save"
        android:backgroundTint="@android:color/transparent"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        android:textColor="@color/cq_on_primary"
        app:strokeColor="@color/cq_medium_gray"
        app:layout_constraintStart_toEndOf="@id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_bio" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingHorizontal="-6dp"
        android:text="Cancel"
        android:backgroundTint="@android:color/transparent"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        android:textColor="@color/cq_on_primary"
        app:strokeColor="@color/cq_medium_gray"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_bio" />

</androidx.constraintlayout.widget.ConstraintLayout>